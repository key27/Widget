<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/_identity"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNama"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:ems="20"
            android:hint="@string/_hint"
            android:inputType="text"
            android:text=""
            android:autofillHints="" />

        <Button
            android:id="@+id/bOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:onClick="onBtnClick"
            android:text="@string/_ok" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fCl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_favcol"
            android:textSize="24sp"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/rBGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rBRed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onRbClicked"
                android:text="@string/_red" />

            <RadioButton
                android:id="@+id/rBGreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onRbClicked"
                android:text="@string/_green" />

            <RadioButton
                android:id="@+id/rBBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onRbClicked"
                android:text="@string/_blue" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/Cls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_class"
        android:textSize="24sp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cB19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onCbClicked"
            android:layout_margin="16dp"
            android:text="@string/_19" />

        <CheckBox
            android:id="@+id/cB20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onCbClicked"
            android:layout_margin="16dp"
            android:text="@string/_20" />

        <CheckBox
            android:id="@+id/cB21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onCbClicked"
            android:layout_margin="16dp"
            android:text="@string/_21" />

        <CheckBox
            android:id="@+id/cB22"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onCbClicked"
            android:layout_margin="16dp"
            android:text="@string/_22" />
    </LinearLayout>

    <TextView
        android:id="@+id/textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>
